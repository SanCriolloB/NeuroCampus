{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",           // usa la transform JSX moderna
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,               // TypeScript estricto
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"]      // tipados para import.meta.env.*
  },
  "include": ["src"]
}