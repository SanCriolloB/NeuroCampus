{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://neurocampus.local/schemas/plantilla_dataset.schema.json",
  "title": "Plantilla de Evaluación Docente — basada en dataset_unificado_comentarios",
  "description": "Esquema de columnas esperado para carga/validación de evaluaciones.",
  "version": "v0.3.0",
  "$comment": "El validador normaliza encabezados (minúsculas, sin acentos, espacios↔'_', sin puntuación) y acepta sinónimos; ver x-aliases.",
  "type": "object",
  "properties": {
    "periodo": {
      "type": "string",
      "pattern": "^\\d{4}-(1|2)$",
      "description": "Periodo académico AAAA-1|AAAA-2 (ej. 2024-2)"
    },

    "ID": {
      "type": "integer",
      "minimum": 0,
      "description": "Identificador de fila/registro (si existiera en el CSV; no requerido)."
    },

    "codigo_materia": {
      "type": "string",
      "minLength": 1,
      "description": "Código/ID de la asignatura. Se tipa como string para evitar problemas de precisión.",
      "x-aliases": ["codigo materia", "codigomateria", "cod_materia", "codigo_asignatura", "codigo asignatura"]
    },

    "grupo": {
      "type": "integer",
      "minimum": 1,
      "maximum": 9999,
      "description": "Grupo/curso (entero; observado ~1–13).",
      "x-aliases": ["grupo_id"]
    },

    "materia": {
      "type": "string",
      "minLength": 1,
      "description": "Nombre de la asignatura"
    },

    "cedula_profesor": {
      "type": "string",
      "minLength": 1,
      "description": "Identificador del profesor (string por magnitud y ceros a la izquierda).",
      "x-aliases": ["cedula profesor", "cedula", "cedula_docente", "cedula docente", "docente_id"]
    },

    "profesor": {
      "type": "string",
      "minLength": 1,
      "description": "Nombre completo del profesor"
    },

    "pregunta_1":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 1 (0–50)" },
    "pregunta_2":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 2 (0–50)" },
    "pregunta_3":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 3 (0–50)" },
    "pregunta_4":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 4 (0–50)" },
    "pregunta_5":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 5 (0–50)" },
    "pregunta_6":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 6 (0–50)" },
    "pregunta_7":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 7 (0–50)" },
    "pregunta_8":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 8 (0–50)" },
    "pregunta_9":  { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 9 (0–50)" },
    "pregunta_10": { "type": "number", "minimum": 0, "maximum": 50, "description": "Ítem 10 (0–50)" },

    "Sugerencias:": {
      "type": ["string", "null"],
      "maxLength": 5000,
      "description": "Campo cualitativo (comentarios). Puede venir vacío/nulo.",
      "x-aliases": ["Sugerencias", "sugerencias"]
    }
  },

  "required": [
    "periodo",
    "codigo_materia",
    "grupo",
    "materia",
    "cedula_profesor",
    "profesor",
    "pregunta_1",
    "pregunta_2",
    "pregunta_3",
    "pregunta_4",
    "pregunta_5",
    "pregunta_6",
    "pregunta_7",
    "pregunta_8",
    "pregunta_9",
    "pregunta_10"
  ],

  "additionalProperties": false
}
